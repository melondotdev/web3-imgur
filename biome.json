{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "lineWidth": 80,
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "indentWidth": 2,
      "indentStyle": "space",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noUnusedVariables": "off",
        "noUnusedFunctionParameters": "off"
      },
      "a11y": {
        "noAutofocus": "off",
        "useKeyWithClickEvents": "off",
        "useButtonType": "off",
        "noStaticElementInteractions": "off"
      },
      "complexity": {
        "useLiteralKeys": "off"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      },
      "nursery": {
        "useImportType": "off",
        "noNamespaceImport": "off"
      }
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "files": {
    "ignore": ["**/coverage/**", "**/.next/**", "**/node_modules/**", "**/dist/**"]
  }
}
